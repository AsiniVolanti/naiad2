{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "NAIAD Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/naiad/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-v"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}